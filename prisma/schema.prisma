generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Element {
  id                String   @id @default(cuid()) // or @default(uuid()) if you prefer UUID
  title             String
  description       String
  shortDescription  String?
  html              String
  css               String
  js                String?
  tags              String[] // Array of strings
  mainCategory      String[] // Array of strings
  secondaryCategory String[] // Array of strings
  deleted           Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Valid GIN indexes for array fields
  @@index([mainCategory], type: Gin)
  @@index([secondaryCategory], type: Gin)
  @@index([tags], type: Gin)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updateUt  DateTime @updatedAt
}
